@model int //va a recibir un entero que es el ID

<div class="d-grid gap-2 d-md-block">
    @*La siguiente etiqueta será el botón Principal de Actualizar
        asp-route-ID donde "ID" es el nombre de la variable que se indicó en 
        el Método "Upsert()" del Controlador
    *@
    <button type="submit" class="btn btn-primary" onfocus="false" asp-route-id="@Model"> <i class="bi bi-pencil-square"></i> Guardar Cambios</button>
    @*La siguiente etiqueta será el botón Regresar*@
    <a asp-action="Index" class="btn btn-success"> <i class="bi bi-arrow-return-left"></i> Regresar </a>
</div>